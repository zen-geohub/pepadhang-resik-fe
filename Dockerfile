FROM node:20-alpine

ARG VITE_BASEMAP_KEY
ARG VITE_GEOSERVER
ARG VITE_BACKEND

ENV VITE_BACKEND=$VITE_BACKEND
ENV VITE_BASEMAP_KEY=$VITE_BASEMAP_KEY
ENV VITE_GEOSERVER=$VITE_GEOSERVER

WORKDIR /app

COPY package*.json .

RUN npm i

RUN npm i -g serve

COPY . .

RUN npm run build

EXPOSE 3009

CMD ["serve", "-s", "dist", "-p", "3009"]